@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
}

<h4>@ViewData["Title"]</h4>
@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            @if (Model.IsEmailConfirmed)
            {
                <div class="input-group">
                    <input asp-for="Input.Email" class="form-control" readonly="readonly" />
                    <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                </div>
            }
            else
            {
                <input asp-for="Input.Email" class="form-control" readonly="readonly" />
                <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Enviar correo de verificación.</button>
            }
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Empleado.Cedula"></label>
            <input asp-for="Input.Empleado.Cedula" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="Input.Empleado.Nombre"></label>
            <input asp-for="Input.Empleado.Nombre" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="Input.Empleado.Apellido1"></label>
            <input asp-for="Input.Empleado.Apellido1" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="Input.Empleado.Apellido2"></label>
            <input asp-for="Input.Empleado.Apellido2" class="form-control" readonly="readonly" />
        </div>
        <div class="form-group">
            <label asp-for="Input.Empleado.Telefono"></label>
            <input asp-for="Input.Empleado.Telefono" class="form-control" readonly="readonly" />
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
