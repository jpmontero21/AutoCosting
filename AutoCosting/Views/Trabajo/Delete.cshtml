@model AutoCosting.Models.Maintenance.Trabajo

@{
    ViewData["Title"] = "Delete";
}

<br />
<h2>Eliminar Trabajo</h2>
<hr />

<h3>Está seguro que desea eliminar el trabajo?</h3>
<hr />
<form asp-action="Delete">
    <div class="form-group">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="Descripcion" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Descripcion" disabled class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="PrecioPromedio" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="PrecioPromedio" disabled class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-sm btn-danger" />
                <a asp-action="Index" class="btn btn-sm btn-success">Regresar a la Lista</a>
            </div>
        </div>
    </div>
</form>
