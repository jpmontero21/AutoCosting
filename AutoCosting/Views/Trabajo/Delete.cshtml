@model AutoCosting.Models.Maintenance.Trabajo

@{
    ViewData["Title"] = "Delete";
}

<h2>Eliminar Trabajo</h2>
<hr />

<h3>Está seguro que desea eliminar el trabajo?</h3>
<hr />
<form asp-action="Delete">    
    <div class="form-group">
        <div asp-validation-summary="ModelOnly"></div>        
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Información del Trabajo</h3>
            </div>
            <div class="box-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-3">
                            <label asp-for="Descripcion" class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Descripcion" class="form-control" placeholder="Descripción" readonly="readonly">
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-3">
                            <label asp-for="PrecioPromedio" class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="PrecioPromedio" class="form-control" placeholder="Precio" readonly="readonly" />
                        </div>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="ID" class="text-danger"></span>
                        <br />
                        <input type="submit" value="Eliminar" class="btn btn-sm btn-danger" />
                        <a asp-action="Index" class="btn btn-sm btn-success">Regresar a la Lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
