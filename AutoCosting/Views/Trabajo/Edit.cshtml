@model AutoCosting.Models.Maintenance.Trabajo

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Trabajo</h2>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Información del Trabajo</h3>
            </div>
            <div class="box-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-3">
                            <label asp-for="Descripcion" class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Descripcion" class="form-control" placeholder="Descripción">
                        </div>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-3">
                            <label asp-for="PrecioPromedio" class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="PrecioPromedio" class="form-control" placeholder="Precio" />
                        </div>
                        <span asp-validation-for="PrecioPromedio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Actualizar" class="btn btn-sm btn-primary" />
                        <a asp-action="Index" class="btn btn-sm btn-success">Regresar a la Lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
