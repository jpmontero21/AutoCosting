@model AutoCosting.Models.Maintenance.Trabajo

@{
    ViewData["Title"] = "Edit";
}
<br />
<h2>Editar Trabajo</h2>
<hr />
<form asp-action="Edit">
    <div class="form-group">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="Descripcion" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Descripcion" class="form-control">
                </div>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="PrecioPromedio" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="PrecioPromedio" class="form-control" />
                </div>
                <span asp-validation-for="PrecioPromedio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-sm btn-primary" />
                <a asp-action="Index" class="btn btn-sm btn-success">Regresar a la Lista</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
