                </div>
                <div class="form-group">
                    <label asp-for="Marca"></label>
                    <select asp-for="Marca" class="form-control" asp-items="ViewBag.Brands" disabled>
                        <option disabled selected>--Seleccionar--</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Modelo"></label>
                    <input asp-for="Modelo" class="form-control" placeholder="Modelo" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Anno"></label>
                    <input asp-for="Anno" class="form-control" disabled/>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Transmision"></label>
                    <select asp-for="Transmision" class="form-control" asp-items="Html.GetEnumSelectList<Transmision>()" disabled></select>
                </div>
                <div class="form-group">
                    <label asp-for="Estilo"></label>
                    @Html.DropDownList("Estilo", new SelectList(new List<SelectListItem> {
                        new SelectListItem { Text = "N/A", Value = "N/A"},
                        new SelectListItem { Text = "Sedán", Value = "Sedán"},
                        new SelectListItem { Text = "Station Wagon", Value = "Station Wagon"},
                        new SelectListItem { Text = "Hatchback", Value = "Hatchback"},
                        new SelectListItem { Text = "Pickup 4x2", Value = "Pickup 4x2"},
                        new SelectListItem { Text = "Pickup 4x4", Value = "Pickup 4x4"},
                        new SelectListItem { Text = "Microbús/Minivan", Value = "Microbús/Minivan"},
                        new SelectListItem { Text = "Todo Terreno 4x2", Value = "Todo Terreno 4x2"},
                        new SelectListItem { Text = "Todo Terreno 4x4", Value = "Todo Terreno 4x4"},
                        new SelectListItem { Text = "Casa rodante", Value = "Casa Rodante"},
                        new SelectListItem { Text = "Comercial", Value = "Comercial"}
                    }, "Value", "Text"), "Seleccionar Estilo", new { @class = "form-control", @disabled = "disabled" })
                </div>
                <div class="form-group">
                    <label asp-for="Combustible"></label>
                    <select asp-for="Combustible" class="form-control" asp-items="Html.GetEnumSelectList<Combustible>()" disabled></select>
                </div>
                <div class="form-group">
                    <label asp-for="NumeroPuertas"></label>
                    @Html.DropDownList("NumeroPuertas", new SelectList(new List<SelectListItem> {
                        new SelectListItem { Text = "N/A", Value = "N/A"},
                        new SelectListItem { Text = "2 - 3", Value = "2 - 3"},
                        new SelectListItem { Text = "4 o más", Value = "4 o más"},

                    }, "Value", "Text"), "Seleccionar Puertas", new { @class = "form-control", @disabled = "disabled" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Color"></label>
                    <input asp-for="Color" class="form-control" type="color" disabled/>
                </div>
                <div class="form-group">
                    <label asp-for="Placa"></label>
                    <input asp-for="Placa" class="form-control" disabled/>
                </div>
                <div class="form-group">
                    <label asp-for="Kilometraje"></label>
                    <input asp-for="Kilometraje" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="Estado"></label>
                    <select asp-for="Estado" class="form-control" asp-items="Html.GetEnumSelectList<Estado>()" disabled></select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Cilindrada"></label>
                    <input asp-for="Cilindrada" class="form-control" disabled/>
                </div>
                <div class="form-group">
                    <label asp-for="PrecioMinimo"></label>
