                </div>
                <div class="form-group">
                    <label asp-for="PrecioRecomendado"></label>
                    <input asp-for="PrecioRecomendado" class="form-control" disabled/>
                </div>
                <div class="form-group">
                    <label asp-for="FechaIngreso"></label>
                    <input asp-for="FechaIngreso" class="form-control" type="date" disabled />
                </div>
                @*<div class="checkbox">
                        <label>
                            <input asp-for="ApartadoYN" type="checkbox" /> Apartado
                        </label>
                    </div>*@
            </div>
        </div>
    </div>
</div>
