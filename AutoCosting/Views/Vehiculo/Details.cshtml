<div class="form-group">

    @if (Model.VendidoYN)
    {
        <a asp-action="SoldVehicles" class="btn btn-sm btn-success">Regresar a la Lista</a>
    }
    else if (Model.ApartadoYN)
    {        
        <a asp-action="ReservedVehicles" class="btn btn-sm btn-success">Regresar a la Lista</a>
    }
    else
    {
        <a asp-action="Edit" asp-route-id="@Model.VIN" class="btn btn-sm btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-sm btn-success">Regresar a la Lista</a>
    }
</div>


