@model IEnumerable<AutoCosting.Models.Maintenance.Vehiculo>

@{
    ViewData["Title"] = "Index";
}

<script type="text/javascript">
    function ShowDate() {
        document.getElementById("search").type = "date"
    };
    function ShowText() {
        document.getElementById("search").type = "text"
    };
    function ShowNumeric() {
        document.getElementById("search").type = "number"
    };
    window.onload =
        function SetFilterOption() {
            var checked = document.getElementById("Fecha").checked;
            if (checked == true) {
                ShowDate();
            }
            else {
                ShowText();
            }
        }
</script>
<h2>Vehículos Reservados</h2>
<hr />
<form asp-action="ReservedVehicles" asp-controller="Vehiculo" method="get">
    <div class="box-header with-border">
        <div class="col-sm-4" style="padding-top:20px">
            <a asp-action="Index" class="btn btn-primary">Ver Disponibles</a>
            <a asp-action="SoldVehicles" class="btn btn-success">Ver Vendidos</a>
        </div>
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-12 text-right" onload="SetFilterOption()">

                    <div>
                        <b>Buscar:  &nbsp;&nbsp;&nbsp; </b>
                        <label class="radio-inline" onclick="ShowText()">@Html.RadioButton("option", "Marca") Marca</label>
                        <label class="radio-inline" onclick="ShowText()">@Html.RadioButton("option", "Modelo") Modelo </label>
                        <label class="radio-inline" onclick="ShowNumeric()">@Html.RadioButton("option", "Anno") Año </label>
                        <label class="radio-inline" onclick="ShowText()">@Html.RadioButton("option", "Transmision") Transmisión </label>
                    </div>
                    <div class="row">
                        <label class="radio-inline" onclick="ShowText()">@Html.RadioButton("option", "Estilo") Estilo </label>
                        <label class="radio-inline" onclick="ShowText()">@Html.RadioButton("option", "Combustible") Combustible </label>
                        <label class="radio-inline" onclick="ShowText()">@Html.RadioButton("option", "Estado") Estado </label>
                        <label class="radio-inline" onclick="ShowDate()">@Html.RadioButton("option", "Fecha", new { id = "Fecha" }) Fecha de Ingreso</label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="pull-right">
                    <button type="submit" name="submit" value="Buscar" class="btn btn-primary">
                        <span class="glyphicon glyphicon-search"></span> Buscar
                    </button>
                </div>
                <div class="pull-right">
                    @Html.Editor("search", new { HtmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.VIN)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Modelo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Anno)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Transmision)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estilo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Combustible)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaIngreso)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="VehicleHistory" asp-controller="Vehiculo" asp-route-VIN="@item.VIN"><i class="fa fa-list-alt"></i></a>
                        @Html.DisplayFor(modelItem => item.VIN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modelo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Anno)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Transmision)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estilo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Combustible)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaIngreso)
                    </td>
                    <td>
                        <a asp-action="Details" asp-controller="Vehiculo" asp-route-id="@item.VIN" class="btn btn-sm btn-success glyphicon glyphicon-list"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>