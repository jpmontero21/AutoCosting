@model AutoCosting.Models.Maintenance.Empleado

@{
    ViewData["Title"] = "Delete";
}

<h2>Eliminar Empleado</h2>
<hr />

<h3>Está seguro que desea eliminar el empleado?</h3>
<hr />

<form asp-action="Delete">
    <div class="form-group">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="Cedula" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Cedula" disabled class="form-control" />
                </div>
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="Nombre" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Nombre" disabled class="form-control" />
                </div>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="Apellido1" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Apellido1" disabled class="form-control" />
                </div>
                <span asp-validation-for="Apellido1" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="Apellido2" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Apellido2" disabled class="form-control" />
                </div>
                <span asp-validation-for="Apellido2" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="Direccion" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Direccion" disabled class="form-control" />
                </div>
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="Telefono" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Telefono" disabled class="form-control" />
                </div>
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="FechaNacimiento" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="FechaNacimiento" disabled class="form-control" type="date" for />
                </div>
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="DescripcionPuesto" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="DescripcionPuesto" disabled class="form-control" />
                </div>
                <span asp-validation-for="DescripcionPuesto" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="Notas" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <textarea asp-for="Notas" disabled class="form-control"></textarea>
                </div>
                <span asp-validation-for="Notas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-sm btn-danger" />
                <a asp-action="Index" class="btn btn-sm btn-success">Regresar a la Lista</a>
            </div>
        </div>
    </div>
</form>
