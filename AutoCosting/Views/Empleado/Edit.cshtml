@model AutoCosting.Models.Maintenance.Empleado

@{
    ViewData["Title"] = "Edit";
}

<br />
<h2>Editar Empleado</h2>
<hr />

<form asp-action="Edit">
    <div class="form-group">
        <input type="hidden" asp-for="Cedula" />
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="Cedula" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Cedula" disabled class="form-control" />
                </div>
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="Nombre" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Nombre" class="form-control" />
                </div>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="Apellido1" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Apellido1" class="form-control" />
                </div>
                <span asp-validation-for="Apellido1" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="Apellido2" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Apellido2" class="form-control" />
                </div>
                <span asp-validation-for="Apellido2" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="Direccion" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Direccion" class="form-control" />
                </div>
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="Telefono" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Telefono" class="form-control" />
                </div>
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="FechaNacimiento" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="FechaNacimiento" class="form-control" type="date" for />
                </div>
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="DescripcionPuesto" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="DescripcionPuesto" class="form-control" />
                </div>
                <span asp-validation-for="DescripcionPuesto" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="Notas" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <textarea asp-for="Notas" class="form-control"></textarea>
                </div>
                <span asp-validation-for="Notas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizar" class="btn btn-sm btn-primary" />
                <a asp-action="Index" class="btn btn-sm btn-success">Regresar a la Lista</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
