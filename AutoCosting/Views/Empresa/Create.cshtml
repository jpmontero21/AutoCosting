@model AutoCosting.Models.Maintenance.Empresa

@{
    ViewData["Title"] = "Create";
}

<h2>Crear Empresa</h2>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Información de la Empresa</h3>
            </div>
            <div class="box-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Nombre" class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Direccion" class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Direccion" class="form-control" placeholder="Dirección" />
                        </div>
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Telefono" class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Telefono" class="form-control" data-mask="9999-9999" placeholder="Teléfono" />
                        </div>
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>                    
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="ContactEmail" class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="ContactEmail" class="form-control" placeholder="Correo de Contacto" />
                        </div>
                        <span asp-validation-for="ContactEmail" class="text-danger"></span>
                    </div>                    
                </div>
            </div>
        </div>
        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Configuración</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="DBBackupPath" class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="DBBackupPath" class="form-control" placeholder="C:/DB/..." />
                        </div>
                        <span asp-validation-for="DBBackupPath" class="text-danger"></span>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input asp-for="MultiSedeYN" /> @Html.DisplayNameFor(model => model.MultiSedeYN)
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input asp-for="ImprimirLogoYN" /> @Html.DisplayNameFor(model => model.ImprimirLogoYN)
                        </label>
                    </div>
                </div>
                
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Crear" class="btn btn-sm btn-primary" />
            <a asp-action="Index" class="btn btn-sm btn-success">Regresar a la lista</a>
        </div>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
