@model AutoCosting.Models.Maintenance.Empresa

@{
    ViewData["Title"] = "Details";
}


<h2>Detalles de la Empresa</h2>
<hr />

<div class="form-group">
    <div class="box box-success">
        <div class="box-header with-border">
            <h3 class="box-title">Información de la Empresa</h3>
        </div>
        <div class="box-body">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Nombre" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Nombre" class="form-control" readonly="readonly" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Direccion" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Direccion" class="form-control" readonly="readonly" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Telefono" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Telefono" class="form-control" data-mask="9999-9999" readonly="readonly" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="MultiSedeYN" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <div class="checkbox">
                            <label>
                                <input asp-for="MultiSedeYN" disabled />
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="ContactEmail" class="custom-label"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="ContactEmail" class="form-control" readonly="readonly" />
                    </div>
                </div>
                <div class="form-group">
                    <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-sm btn-primary">Editar</a>
                    <a asp-action="Index" class="btn btn-sm btn-success">Regresar a la lista</a>
                </div>
            </div>
        </div>
    </div>
</div>



