@model AutoCosting.Models.IndividualButtonPartial

<td style="width:150px;">
    <div class="btn-group" role="group">
        @await Html.PartialAsync("_IndividualButtonPartial",
        new IndividualButtonPartial
        {
            Action = "Edit",
            ButtonType = "btn-primary",
            Glyph = "pencil",
            Text = "Edit Button",
            Id = Model.Id
        })


        @await Html.PartialAsync("_IndividualButtonPartial",
        new IndividualButtonPartial
        {
            Action = "Details",
            ButtonType = "btn-success",
            Glyph = "list",
            Text = "Details Button",
            Id = Model.Id
        })


        @await Html.PartialAsync("_IndividualButtonPartial",
        new IndividualButtonPartial
        {
            Action = "Delete",
            ButtonType = "btn-danger",
            Glyph = "trash",
            Text = "Delete Button",
            Id = Model.Id
        })
    </div>
</td>