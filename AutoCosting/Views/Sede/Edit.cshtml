@model AutoCosting.Models.Maintenance.Sede

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Sede</h2>
<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="EmpresaID" /> 
    <div class="form-group">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Información de la Sede</h3>
            </div>
            <div class="box-body">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="EmpresaID" class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <select asp-for="EmpresaID" class="form-control" disabled asp-items="ViewBag.EmpresaID"></select>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Nombre" class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Direccion" class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Direccion" class="form-control" placeholder="Dirección" />
                        </div>
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Telefono" class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="Telefono" class="form-control" data-mask="9999-9999" placeholder="Teléfono" />
                        </div>
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="NombreContacto" class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="NombreContacto" class="form-control" placeholder="Contacto" />
                        </div>
                        <span asp-validation-for="NombreContacto" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="ContactEmail" class="custom-label"></label>
                        </div>
                        <div class="col-sm-4">
                            <input asp-for="ContactEmail" class="form-control" placeholder="Email" />
                        </div>
                        <span asp-validation-for="ContactEmail" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Actualizar" class="btn btn-sm btn-primary" />
                        <a asp-action="Index" class="btn btn-sm btn-success">Regresar a la Lista</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
