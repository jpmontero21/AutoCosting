@if (Model.Empresa != null)
{
    <div class="info-box">
        <br />
        <div class="box-content" style="text-align:center">
            <h4>@Model.Empresa.Nombre </h4>
            <h5>@Model.Empresa.Direccion</h5>
        </div>
        <!-- /.info-box-content -->
    </div>
}
<div class="col-md-12">
    <div class="row">
        <div class="box box-info">
            <div class="box-header with-border" style="text-align:center">
                <h1 class="box-title">Actividad de la Empresa</h1>
            </div>
            <div class="box-body">


                <div class="row">
                    <h3 class="text-center">Movimientos recientes</h3>
                    <div class="col-md-4">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Vehículos</h3>
                                <div class="box-tools pull-right">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                </div>
                            </div>
                            <div class="box-body">
                                @foreach (var item in Model.Vehiculos)
                                {
                                    <a asp-action="Details" asp-controller="Vehiculo" asp-route-id="@item.VIN" class="btn btn-sm btn-success glyphicon glyphicon-list"></a> @item.Marca @item.Modelo @item.Anno
                                    <br />
                                    <br />
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="box box-info">
                            <div class="box-header with-border">
                                <h3 class="box-title">Seguimientos</h3>
                                <div class="box-tools pull-right">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                </div>
                            </div>
                            <div class="box-body">
                                @foreach (var item in Model.Trackings)
                                {
                                    <a asp-action="Details" asp-controller="TrackingHeaders" asp-route-id="@item.TrackingID" class="btn btn-sm btn-success glyphicon glyphicon-list"></a> @item.TrackingIdStr @item.Vehiculo.Marca @item.Vehiculo.Modelo
                                    <br />
                                    <br />
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title">Transacciones Recientes</h3>
                                <div class="box-tools pull-right">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                                </div>
                            </div>
                            <div class="box-body">
                                @foreach (var item in Model.Transaccions)
                                {
                                    <a asp-action="Details" asp-controller="TransaccionHeader" asp-route-id="@item.TransID" class="btn btn-sm btn-success glyphicon glyphicon-list"></a> @item.TransIdStr @item.Cliente.Nombre @item.Cliente.Apellido1 @item.TipoTransaccion
                                    <br /><br />

                                }
                            </div>
                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>
</div>   