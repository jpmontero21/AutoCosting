@model AutoCosting.Models.Transaction.TransaccionDetail

@{
    ViewData["Title"] = "Delete";
}

<h2>Eliminar Linea de Detalle de Transacción</h2>
<h3>Número de Transacción @Html.DisplayFor(modelItem => Model.TransID)</h3>
<hr />

<h3>Está seguro que desea eliminar esta linea de detalle?</h3>
<h5>Eliminar este detalle habilitara la venta del vehículo relacionado..</h5>
<hr />

<form asp-action="Delete">
    <div class="form-group">
        <input type="hidden" asp-for="TransID" />        
        <div class="form-group">
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="VINVehiculo" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Vehiculo.Descripcion" class="form-control" readonly="readonly" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="PrecioAcordado" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="PrecioAcordado" class="form-control"  readonly="readonly"  />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="PrecioMinimo" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="PrecioMinimo" readonly="readonly" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-3">
                    <label asp-for="PrecioRecomendado" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="PrecioRecomendado" readonly="readonly" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-sm btn-danger" />
                <a asp-action="Edit" asp-controller="TransaccionHeader" asp-route-id="@Model.TransID" class="btn btn-sm btn-success">Regresar a la Transacción</a>
            </div>
        </div>
    </div>
</form>

