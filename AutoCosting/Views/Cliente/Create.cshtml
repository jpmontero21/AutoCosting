@model AutoCosting.Models.Maintenance.Cliente

@{
    ViewData["Title"] = "Create";
}

<h2>Crear Cliente</h2>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Información del Cliente</h3>
        </div>

        <div class="box-body">
            <div class="row">
                <div class="box-body col-md-6">
                    <div class="form-group">
                        <label asp-for="Cedula" class="col-sm-3 control-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="Cedula" class="form-control" placeholder="Cédula" />
                        </div>
                        <span asp-validation-for="Cedula" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Nombre" class="col-sm-3 control-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Apellido1" class="col-sm-3 control-label "></label>
                        <div class="col-sm-9">
                            <input asp-for="Apellido1" class="form-control" placeholder="Primer Apellido" />
                        </div>
                        <span asp-validation-for="Apellido1" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Apellido2" class="col-sm-3 control-label "></label>
                        <div class="col-sm-9">
                            <input asp-for="Apellido2" class="form-control" placeholder="Segundo Apellido" />
                        </div>
                        <span asp-validation-for="Apellido2" class="text-danger"></span>
                    </div>
                </div>
                <div class="box-body col-md-6" style="padding-top:15px">
                    <div class="form-group">
                        <label asp-for="Direccion" class="col-sm-3 control-label "></label>
                        <div class="col-sm-9">
                            <input asp-for="Direccion" class="form-control" placeholder="Direccion" />
                        </div>
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Telefono" class="col-sm-3 control-label "></label>
                        <div class="col-sm-9">
                            <input asp-for="Telefono" class="form-control" data-mask="9999-9999" placeholder="Teléfono" />
                        </div>
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Email" class="col-sm-3 control-label "></label>
                        <div class="col-sm-9">
                            <input asp-for="Email" class="form-control" placeholder="Correo Eléctronico" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Notas" class="col-sm-3 control-label"></label>
                        <div class="col-sm-9">
                            <textarea asp-for="Notas" class="form-control" placeholder="Notas ..."></textarea>
                        </div>
                        <span asp-validation-for="Notas" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-sm btn-primary" />
                <a asp-action="Index" class="btn btn-sm btn-success">Regresar a la Lista</a>
            </div>
        </div>


    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
