@model AutoCosting.Models.Maintenance.Cliente

@{
    ViewData["Title"] = "Delete";
}

<h2>Eliminar Cliente</h2>
<hr />

<h3>Está seguro que desea eliminar el cliente?</h3>
<hr />
<form asp-action="Delete">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="box box-danger">
        <div class="box-header with-border">
            <h3 class="box-title">Información del Cliente</h3>
        </div>

        <div class="box-body">
            <div class="row">
                <div class="box-body col-md-6">
                    <div class="form-group">
                        <label asp-for="Cedula" class="col-sm-3 control-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="Cedula" class="form-control" placeholder="Cédula" readonly="readonly"/>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Nombre" class="col-sm-3 control-label"></label>
                        <div class="col-sm-9">
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre" readonly="readonly"/>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Apellido1" class="col-sm-3 control-label "></label>
                        <div class="col-sm-9">
                            <input asp-for="Apellido1" class="form-control" placeholder="Primer Apellido" readonly="readonly" />
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Apellido2" class="col-sm-3 control-label "></label>
                        <div class="col-sm-9">
                            <input asp-for="Apellido2" class="form-control" placeholder="Segundo Apellido" readonly="readonly" />
                        </div>
                    </div>
                </div>
                <div class="box-body col-md-6" style="padding-top:15px">
                    <div class="form-group">
                        <label asp-for="Direccion" class="col-sm-3 control-label "></label>
                        <div class="col-sm-9">
                            <input asp-for="Direccion" class="form-control" placeholder="Direccion" readonly="readonly"/>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Telefono" class="col-sm-3 control-label "></label>
                        <div class="col-sm-9">
                            <input asp-for="Telefono" class="form-control" data-mask="9999-9999" placeholder="Teléfono" readonly="readonly" />
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Email" class="col-sm-3 control-label "></label>
                        <div class="col-sm-9">
                            <input asp-for="Email" class="form-control" placeholder="Correo Eléctronico" readonly="readonly"/>
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Notas" class="col-sm-3 control-label"></label>
                        <div class="col-sm-9">
                            <textarea asp-for="Notas" class="form-control" placeholder="Notas ..." readonly="readonly" ></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-sm btn-danger" />
                <a asp-action="Index" class="btn btn-sm btn-success">Regresar a la Lista</a>
            </div>
        </div>
    </div>
</form>